    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LangBridge API (Linux/Mac)",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/langbridge/venv/Scripts/python",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "langbridge.apps.api.langbridge_api.main:app",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug LangBridge Worker (Linux/Mac)",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/langbridge/venv/Scripts/python",
            "module": "langbridge.apps.worker.langbridge_worker.main",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/langbridge/.env-worker",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach LangBridge Worker (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug API + Worker",
            "configurations": [
                "Debug LangBridge API",
                "Debug LangBridge Worker"
            ],
            "stopAll": true
        }
    ]
}
