    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Langbirdge API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "langbridge.apps.api.langbridge_api.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Debug Langbirdge Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "langbridge.apps.worker.langbridge_worker.main:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}
